[user]
  name = Chris Hoffman
  email = cehoffman@gmail.com

[color]
    ui = auto

[sendemail]
    smtpuser = cehoffman
    smtpserver = smtp.gmail.com
    chainreplyto = false
    smptencryption = tls
[alias]
    co = checkout
    reup = pull --rebase
    st = status --ignore-submodules=untracked -sb
    d = diff --ignore-submodules=untracked
    dc = diff --cached --ignore-submodules=untracked
    l = log --graph --stat --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    lc = lg ORIG_HEAD.. --no-merges
    ci = commit
    cp = cherry-pick
    br = branch
    unstage = reset HEAD --
    prune-all = !git remote | xargs -n 1 git remote prune
[core]
    whitespace = trailing-space,space-before-tab,-blank-at-eof
    excludesfile = <%= ENV['HOME'] %>/.gitignore
[apply]
    whitespace= fix
[merge]
    conflictstyle = diff3
    tool = mvimdiff3
[mergetool]
    keepBackup = false
[mergetool "mvimdiff3"]
    cmd = mvim -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
    trustExitCode = false
[github]
    user = cehoffman
    token = 5fcd01635ed8dd4479556c6ade2fb5e
[clean]
    requireForce = no
[status]
    submodulesummary = true
    relativePaths = false
[format]
    pretty = %C(yellow)%h%Creset %s %C(red)(%cr)%Creset
[branch]
    autosetuprebase = always
[rerere]
    enabled = 1
[help]
    autocorrect = 1
[push]
    default = tracking
