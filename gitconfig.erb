[user]
  name = Chris Hoffman
  email = cehoffman@gmail.com

[color]
    ui = auto

[sendemail]
    smtpuser = cehoffman
    smtpserver = smtp.gmail.com
    chainreplyto = false
    smptencryption = tls
[alias]
    co = checkout
    reup = pull --rebase
    st = status --ignore-submodules=untracked -sb
    d = diff --ignore-submodules=untracked
    dc = diff --cached --ignore-submodules=untracked
    l = log --graph --stat --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    l1 = l -1
    ci = commit
    cp = cherry-pick
    br = branch
    unstage = reset HEAD --
    amend = commit --amend -C HEAD
    prune-all = !git remote | xargs -n 1 git remote prune
    subup = !git submodule foreach 'git co master && git reup'
    root = !pwd
[core]
    eol = lf
    compression = 9
    pager = less
    whitespace = trailing-space,space-before-tab,-blank-at-eof
    excludesfile = <%= ENV['HOME'] %>/.gitignore
    preloadindex = true
[apply]
    whitespace = fix
[merge]
    conflictstyle = merge
    tool = threesome
[mergetool]
    keepBackup = false
[mergetool "mvimdiff3"]
    cmd = mvim -f -c \"Gdiff\" \"$MERGED\"
    trustExitCode = false
[mergetool "threesome"]
    cmd = "mvim -f $BASE $LOCAL $REMOTE $MERGED -c 'ThreesomeInit'"
    trustExitCode = true
[github]
    user = cehoffman
[clean]
    requireForce = no
[status]
    submodulesummary = true
    relativePaths = false
    showUntrackedFiles = all
[fetch]
    recurseSubmodules = on-demand
[format]
    pretty = %C(yellow)%h%Creset %s %C(red)(%cr)%Creset
[branch]
    autosetuprebase = always
[rerere]
    enabled = 1
[help]
    autocorrect = 1
[push]
    default = upstream
[interactive]
    singlekey = true
[credential]
<% if mac? %>
    helper = osxkeychain
<% else %>
    helper = gnomekeyring
<% end %>
