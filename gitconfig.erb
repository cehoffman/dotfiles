[sendemail]
    smtpuser = cehoffman
    smtpserver = smtp.gmail.com
    chainreplyto = false
    smptencryption = tls
[alias]
    co = checkout
    reup = pull --rebase
    st = status --ignore-submodules=untracked
    df = diff --ignore-submodules=untracked
    ci = commit
    cp = cherry-pick
    br = branch
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    unstage = reset HEAD --
[core]
    whitespace = trailing-space,space-before-tab,-blank-at-eof
    excludesfile = <%= ENV['HOME'] %>/.gitignore
[apply]
    whitespace= fix
[merge]
    conflictstyle = diff3
    tool = textmate
[merge "textmate"]
    cmd = mate -w
