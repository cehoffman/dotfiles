defaults
# Default to secure logins
auth on
tls on
tls_starttls on

# This defaults to on, but incase it changes just make sure
tls_certcheck on

# Log activity to the mail syslog facility
syslog LOG_MAIL

account cehoffman@gmail.com
host smtp.gmail.com
port 587
user cehoffman@gmail.com
from cehoffman@gmail.com
tls_trust_file ~/.cacerts/equifax.crt

account cehoffman@othercoders.com : cehoffman@gmail.com
user cehoffman@othercoders.com
from cehoffman@othercoders.com

account cehaderach@icloud.com
host smtp.mail.me.com
port 587
user cehaderach
from cehaderach@icloud.com
tls_trust_file ~/.dotfiles/cacerts/equifax.crt
dsn_notify failure,delay
dsn_return full

account christopher.hoffman@emerson.com
host ceh.im
port 1025
user emrsn.org\choffman
from christopher.hoffman@emerson.com
tls_trust_file ~/.dotfiles/cacerts/startcom.pem
