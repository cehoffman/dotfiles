defaults
# Default to secure logins
auth on
tls on
tls_starttls on

# This defaults to on, but incase it changes just make sure
tls_certcheck on

# Log activity to the mail syslog facility
syslog LOG_MAIL

account cehoffman@gmail.com
host smtp.gmail.com
port 587
user cehoffman@gmail.com
from cehoffman@gmail.com
tls_trust_file ~/.cacerts/equifax.crt

account cehoffman@othercoders.com : cehoffman@gmail.com
user cehoffman@othercoders.com
from cehoffman@othercoders.com

account cehaderach@me.com
host smtp.mail.me.com
port 587
user cehaderach
from cehaderach@me.com
tls_trust_file ~/.cacerts/entrust.crt
dsn_notify failure,delay,success
dsn_return full

account default : cehoffman@gmail.com

