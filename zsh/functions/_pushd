# pushd function to emulate the old zsh behaviour.
# With this, pushd +/-n lifts the selected element
# to the top of the stack instead of cycling
# the stack.

emulate -R zsh
setopt localoptions

if [[ ARGC -eq 1 && "$1" == [+-]<-> ]] then
        setopt pushdignoredups
        builtin pushd ~$1
else
        builtin pushd "$@"
fi